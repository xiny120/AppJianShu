/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.mapinfo{
  margin-top: 40rpx;
  height: 100%;
  width: 80vh;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;  
}

.controls{
  height: 12vh;
  width: 100vh;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
  bottom: 0;
  position: fixed;  
}

.time {
  width: 50vh;
  text-align: center;
  background-color: rgba(0, 0, 0, .5);
  color: white;
  line-height: 50px;
  margin: 0;
  bottom: 0;
  position: fixed;    
}